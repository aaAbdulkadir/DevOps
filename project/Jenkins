pipeline {
    agent any
    environment{
        ACR = credentials("ACR")
        AZ = credentials('az-credentials')
    }
    stages {
        stage('Login ACR') {
            steps {
                sh 'bash project/bash/login.sh'
            }
        }
        stage('Build') {
            steps {
                sh 'bash project/bash/build.sh'
            }
        }
        stage('Push') {
            steps {
                sh 'bash project/bash/push.sh'
            }
        }
        stage('Login AKS') {
            steps {
                sh 'bash project/bash/login_az.sh'
            }
        }
        stage('Deploy') {
            steps {
                sh 'bash project/bash/deploy.sh'
            }
        }
    }
    post{
        always{
            sh 'docker logout'
        }
    }
}