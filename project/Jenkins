pipeline {
    agent any
    environment{
        ACR = credentials("ACR")
    }
    stages {
        stage('Login') {
            steps {
                sh 'bash project/bash/login.sh'
            }
        }
        stage('Build') {
            steps {
                sh 'bash project/bash/build.sh'
            }
        }
        stage('Push') {
            steps {
                sh 'bash project/bash/push.sh'
            }
        }
        stage('Deploy') {
            steps {
                sh 'bash project/bash/deploy.sh'
            }
        }
    }
    post{
        always{
            sh 'docker logout'
        }
    }
}