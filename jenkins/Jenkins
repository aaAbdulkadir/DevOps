pipeline {
    agent any
    environment{
        DOCKERHUB_CREDENTIALS = credentials("aaabdulkadir-dockerhub")
    }
    stages {
        stage('versions') {
            steps {
                sh 'git version'
                sh 'docker version'
            }
        }
        stage('Login') {
            steps {
                sh 'jenkins/bash/login.sh'
            }
        }
        stage('build') {
            steps {
                sh 'jenkins/bash/build.sh'
            }
        }
        stage('Push') {
            steps {
                sh 'jenkins/bash/push.sh'
            }
        }
    }
    post{
        always{
            sh 'docker logout'
        }
    }
}