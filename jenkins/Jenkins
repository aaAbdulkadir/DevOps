pipeline {
    agent any
    environment{
        DOCKERHUB_CREDENTIALS = credentials("aaabdulkadir-dockerhub")
    }
    stages {
        stage('versions') {
            steps {
                sh "git version"
                sh "docker version"
            }
        }
        stage('Login') {
            steps {
                sh 'docker login --username $DOCKERHUB_CREDENTIALS_USR --password DOCKERHUB_CREDENTIALS_PSW'
            }
        }
        stage('build') {
            steps {
                sh 'bash jenkins/bash/build.sh'
            }
        }
        stage('Push') {
            steps {
                sh 'bash jenkins/bash/push.sh'
            }
        }
    }
    post{
        always{
            sh 'docker logout'
        }
    }
}