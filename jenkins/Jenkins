pipeline {
    agent any
    environment{
        DOCKERHUB_CREDENTIALS = credentials("aaabdulkadir-dockerhub")
    }
    stages {
        stage('setup') {
            steps {
                sh 'bash jenkins/bash/setup.sh'
            }
        }
        stage('Login') {
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_USR'
            }
        }
        stage('build') {
            steps {
                sh 'bash jenkins/bash/build.sh'
            }
        }
        stage('Push') {
            steps {
                sh 'bash jenkins/bash/push.sh'
            }
        }
    }
    post{
        always{
            sh 'docker logout'
        }
    }
}